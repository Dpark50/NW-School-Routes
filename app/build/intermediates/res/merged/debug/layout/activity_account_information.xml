<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dtsquared.nwschoolsafewalk.comp3717.bcit.ca.dtsquared.nwschoolsafewalk.dtsquared.dtsquared.nwschoolsafewalk.AccountInformation">

    <Button
        android:id="@+id/back"
        android:text="@string/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:onClick="back"/>

    <TextView
        android:text="@string/account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:id="@+id/acc_text" />

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_text"
        android:layout_alignStart="@+id/acc_text"
        android:layout_marginTop="46dp"
        android:id="@+id/name_text" />

    <TextView
        android:text="@string/textview_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name_text"
        android:layout_marginTop="57dp"
        android:id="@+id/school_text" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walked_text"
        android:layout_alignStart="@+id/school"
        android:layout_marginTop="29dp"
        android:id="@+id/walked" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/name"
        android:layout_below="@+id/name_text"
        android:layout_toEndOf="@+id/name_text" />

    <TextView
        android:text="@string/distance_walked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/walked_text"
        android:layout_below="@+id/school"
        android:layout_alignStart="@+id/school_text" />

    <TextView
        android:text="School"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/school"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/school_text" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/back"
        android:layout_marginStart="24dp"
        android:rotation="90"
        android:layout_alignBottom="@+id/walked_text"
        android:layout_alignTop="@+id/name_text" />

    <TextView
        android:text="Progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_text"
        android:layout_alignStart="@+id/progressBar"
        android:layout_marginTop="10dp"
        android:id="@+id/progress" />

</RelativeLayout>
